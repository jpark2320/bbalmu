{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "no-shadowed-variable": false,
    "ordered-imports": [false],
    "object-literal-sort-keys": [false],
    "no-console": false,
    "jsx-no-lambda": false,
    "no-var-requires": false,
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-trailing-underscore",
      "allow-pascal-case",
      "allow-snake-case"
    ]
  },
  "jsRules": {
    "no-console": false
  },
  "variable-name": [
    true,
    "ban-keywords",
    "check-format",
    "allow-leading-underscore",
    "allow-trailing-underscore",
    "allow-pascal-case",
    "allow-snake-case"
  ]
}
